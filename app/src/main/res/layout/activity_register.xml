<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="REGISTRATION"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/text_back"
            android:drawableLeft="@drawable/person"
            android:padding="5dp"
            android:hint="UserName"
            android:textColorHint="@color/colorHint"
            android:textSize="22sp"
            android:textColor="@color/colorInput"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/text_back"
            android:drawableLeft="@drawable/ic_mail_black_24dp"
            android:padding="5dp"
            android:hint="UserEmail"
            android:textColorHint="@color/colorHint"
            android:textSize="22sp"
            android:textColor="@color/colorInput" />
        <EditText
            android:id="@+id/password"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/text_back"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:padding="5dp"
            android:hint="Password"
            android:textColorHint="@color/colorHint"
            android:textSize="22sp"
            android:textColor="@color/colorInput"
            android:inputType="textPassword"/>


        <EditText
            android:id="@+id/conf_pass"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/text_back"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:padding="5dp"
            android:hint="ConfirmPassword"
            android:textColorHint="@color/colorHint"
            android:textSize="22sp"
            android:textColor="@color/colorInput"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/register"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="REGISTER"
            android:textColor="@color/colorInput"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_button_back"/>

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered already?Login"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:textColor="@color/colorInput"
            android:padding="5dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>